{
  "app-id": "org.ardour.Ardour",
  "sdk": "org.freedesktop.Sdk",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "20.08",
  "command": "ardour6",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=x11",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI + Alsa */
    "--device=all",
    /* Allow loading, saving files from the home dir (portals donâ€™t work yet) */
    "--filesystem=home",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH=",
    /* Device reservation */
    "--own-name=org.freedesktop.ReserveDevice1.*",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* extensions LV2 */
    "--env=LV2_PATH=/app/extensions/Plugins/lv2",
    "--env=LXVST_PATH=/app/extensions/Plugins/lxvst",
    "--env=VST3_PATH=/app/extensions/Plugins/vst3",
    "--env=LADSPA_PATH=/app/extensions/Plugins/ladspa"
  ],
  "add-extensions": {
    "org.freedesktop.LinuxAudio.Plugins": {
      "directory": "extensions/Plugins",
      "version": "20.08",
      "add-ld-path": "lib",
      "merge-dirs": "ladspa;lv2;lxvst;vst3",
      "subdirectories": true,
      "no-autodownload": true
    }
  },
  "cleanup": [
    "/lib/libjack*"
  ],
  "modules": [
    "gtkmm2.json",
    {
      "name" : "boost",
      "buildsystem" : "simple",
      "cleanup" : [
        "/include",
        "/lib/libboost_*.so*",
        "/lib/libboost_*.a"
      ],
      "build-commands" : [
        "./bootstrap.sh --with-libraries=atomic",
        "./b2 install variant=release link=shared runtime-link=shared --prefix=/app -j $FLATPAK_BUILDER_N_JOBS"
      ],
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://downloads.sourceforge.net/project/boost/boost/1.68.0/boost_1_68_0.tar.bz2",
          "sha256" : "7f6130bc3cf65f56a618888ce9d5ea704fa10b462be126ad053e80e553d6d8b7"
        }
      ]
    },
    {
      "name": "lrdf",
      "rm-configure": true,
      "cleanup": [
        "/include",
        "/lib/pkgconfig"
      ],
      "modules": [
        {
          "name": "raptor2",
          "cleanup": [
            "/include",
            "/lib/pkgconfig"
          ],
          "config-opts": [
            "--disable-documentation",
            "--disable-static"
          ],
          "sources": [
            {
              /* Ardour */
              "type": "archive",
              "url": "http://download.librdf.org/source/raptor2-2.0.14.tar.gz",
              "sha256": "cb447b7c684cbe60f1266d622691fd20fdcf7b91f4a470c6de5fc8e8961df1b2"
            }
          ]
        }
      ],
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "https://github.com/x42/LRDF/archive/0.5.1-rg.tar.gz",
          "sha256": "0ea638dea753ac54b5f19fb8a99ed6f64978b47ba7ee1eaf75377f9956f4ae4c"
        },
        {
          "type": "script",
          "commands": [
            "rm -fr m4",
            "autoreconf -fiv"
          ],
          "dest-filename": "autogen.sh"
        }
      ]
    },
    {
      "name": "liblo",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "*.la",
        "*.so"
      ],
      "build-options": {
          "cflags": "-Wno-error=stringop-truncation",
          "cxxflags": "-Wno-error=stringop-truncation"
      },
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "http://download.sf.net/sourceforge/liblo/liblo-0.28.tar.gz",
          "sha256": "da94a9b67b93625354dd89ff7fe31e5297fc9400b6eaf7378c82ee1caf7db909"
        }
      ]
    },
    {
      "name": "lv2",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=$FLATPAK_DEST --lv2dir=$FLATPAK_DEST/lib/lv2 --copy-headers",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "/share"
      ],
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "http://ardour.org/files/deps/lv2-1.18.0-gbf6b846.tar.bz2",
          "sha256": "0f5a44854ef3d81047ea673910aa99a3ae1ee1b1614c6ef96f23efd14cbe9d15"
        }
      ],
      "post-install": [
        "install -Dm644 -t $FLATPAK_DEST/share/licenses/lv2 COPYING",
        "ln -sf lv2.pc $FLATPAK_DEST/lib/pkgconfig/lv2core.pc"
      ]
    },
    {
      "name": "taglib",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DBUILD_SHARED_LIBS=ON"
      ],
      "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.so"
      ],
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "http://taglib.github.io/releases/taglib-1.9.1.tar.gz",
          "sha256": "72d371cd1419a87ae200447a53bff2be219283071e80fd12337928cc967dc71a"
        }
      ]
    },
    {
      "name": "vamp-plugin-sdk",
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "https://code.soundsoftware.ac.uk/attachments/download/2450/vamp-plugin-sdk-2.8.0.tar.gz",
          "sha256": "dcc96ae894795822398789f251c2c7effa602fc60e9dd6c7a5c5d2e7a513526c"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/vamp-plugin-sdk COPYING"
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig"
      ]
    },
    {
      "name": "rubberband",
      "build-options": {
        "env": {
          "Vamp_CFLAGS": " ",
          "Vamp_LIBS": " "
        }
      },
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "http://code.breakfastquay.com/attachments/download/34/rubberband-1.8.1.tar.bz2",
          "sha256": "ff0c63b0b5ce41f937a8a3bc560f27918c5fe0b90c6bc1cb70829b86ada82b75"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/rubberband COPYING"
      ],
      "cleanup": [
        "/bin",
        "/share/ladspa",
        "*.a",
        "*.so"
      ]
    },
    {
      "name": "fftw3f",
      "config-opts": [
        "--enable-threads",
        "--enable-shared",
        "--disable-static",
        "--enable-float"
      ],
      "build-options": {
        "arch": {
          "x86_64": {
            "config-opts": [
              "--enable-sse2",
              "--enable-avx",
              "--enable-avx-128-fma"
            ]
          }
        }
      },
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "http://www.fftw.org/fftw-3.3.8.tar.gz",
          "sha256": "6113262f6e92c5bd474f2875fa1b01054c4ad5040f6b0da7c03c98821d9ae303"
        }
      ],
      "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/share/man",
        "*.la",
        "*.so"
      ]
    },
    {
      "name": "aubio",
      "buildsystem": "autotools",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/pkgconfig",
        "*.a"
      ],
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "http://aubio.org/pub/aubio-0.3.2.tar.gz",
          "sha256": "dc1387b048610a6141f523c27314b7a60bd299c3d6789c372445ddc6511512cd"
        },
        {
          "type": "shell",
          "commands": [
            "cp -p /usr/share/automake-*/config.{sub,guess} ."
          ]
        }
      ]
    },
    {
      "name": "libusb",
      "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "*.la",
        "*.so"
      ],
      "no-parallel-make": true,
      "config-opts": [
          "--disable-static"
      ],
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "https://github.com/libusb/libusb/releases/download/v1.0.20/libusb-1.0.20.tar.bz2",
          "sha256" : "cb057190ba0a961768224e4dc6883104c6f945b2bf2ef90d7da39e7c1834f7ff"
        }
      ],
      "post-install": [
        "install -Dm644 COPYING /app/share/licenses/libusb/COPYING"
      ],
      "config-opts" : ["--disable-udev"]
    },
    {
      "name": "lilv",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=$FLATPAK_DEST",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "modules": [
        {
          "name": "serd",
          "buildsystem": "simple",
          "build-commands": [
            "python3 ./waf configure --prefix=$FLATPAK_DEST",
            "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
            "python3 ./waf install"
          ],
          "sources": [
            {
              /* Ardour */
              "type": "archive",
              "url": "http://ardour.org/files/deps/serd-0.30.4-g227565f.tar.bz2",
              "sha256": "35c2b093c6e802b1388bc7af0b45e4f5b2fb7d708cf7422234a51d294ab36078"
            }
          ],
          "post-install": [
            "install -Dm644 -t /app/share/licenses/serd COPYING"
          ],
          "cleanup": [
            "/bin",
            "/include",
            "/lib/pkgconfig",
            "/share/man"
          ]
        },
        {
          "name": "sord",
          "buildsystem": "simple",
          "build-commands": [
            "python3 ./waf configure --prefix=$FLATPAK_DEST",
            "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
            "python3 ./waf install"
          ],
          "sources": [
            {
              /* Ardour */
              "type": "archive",
              "url": "http://ardour.org/files/deps/sord-0.16.4-g61d9657.tar.bz2",
              "sha256": "f50a59d8494a42f247e650dae3501294b9a5deaa3d830e97ba32da91f4fa40fd"
            }
          ],
          "post-install": [
            "install -Dm644 -t /app/share/licenses/sord COPYING"
          ],
          "cleanup": [
            "/bin",
            "/include",
            "/lib/pkgconfig",
            "/share/man"
          ]
        },
        {
          "name": "sratom",
          "buildsystem": "simple",
          "build-commands": [
            "python3 ./waf configure --prefix=$FLATPAK_DEST",
            "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
            "python3 ./waf install"
          ],
          "cleanup": [
            "/include",
            "/lib/pkgconfig"
          ],
          "sources": [
            {
              /* Ardour */
              "type": "archive",
              "url": "http://ardour.org/files/deps/sratom-0.6.4-g2ed87d0.tar.bz2",
              "sha256": "2597ea00a62637003cb503aef5f00d52e322730b95cd35da16a5a7781c63b65a"
            }
          ],
          "post-install": [
            "install -Dm644 -t /app/share/licenses/sratom COPYING"
          ]
        }
      ],
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "http://ardour.org/files/deps/lilv-0.24.8-g20f2351.tar.bz2",
          "sha256": "edda9b15d1fc5b4a1c3c31d0912590e2bd4319fcd0d6331d5b7fd134afaa4d67"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/lilv COPYING"
      ],
      "cleanup": [
        "/bin",
        "/etc",
        "/lib/pkgconfig",
        "/share/man"
      ]
    },
    {
      "name": "suil",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=/app",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "cleanup": [
        "/include",
        "/lib/pkgconfig"
      ],
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "http://ardour.org/files/deps/suil-0.10.7-gb402ae4.tar.bz2",
          "sha256": "801d3c42f7a021d5aabef93f960156aa032ad9faca173dc8bd95a7a058f3637f"
        }
      ],
      "post-install": [
        "install -Dm644 -t /app/share/licenses/suil COPYING"
      ],
      "cleanup": [
        "/bin",
        "/etc",
        "/share/man"
      ]
    },
    {
      "name": "libwebsockets",
      "buildsystem": "cmake-ninja",
      "cleanup": [
        "/bin",
        "/include",
        "/share/libwebsockets-test-server",
        "*.a",
        "*.so"
      ],
      "config-opts": [
        "-DLWS_WITH_EXTERNAL_POLL=ON"
      ],
      "sources": [
        {
          /* Ardour */
          "type": "archive",
          "url": "http://ardour.org/files/deps/libwebsockets-4.0.15.tar.gz",
          "sha256": "5f0534aebed62f4cb722a34cd80936048eb374fd726d74fd0065977b46801e93"
        }
      ]
    },
    "shared-modules/linux-audio/jack2.json",
    {
      "name": "ardour",
      "buildsystem": "simple",
      "build-commands": [
        "python3 ./waf configure --prefix=/app --optimize --debug-symbols --no-phone-home --freedesktop --with-backends=alsa,dummy,pulseaudio",
        "python3 ./waf build -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf i18n -j $FLATPAK_BUILDER_N_JOBS",
        "python3 ./waf install"
      ],
      "post-install": [
        "desktop-file-edit --set-key=Name --set-value=\"Ardour 6\" --set-generic-name=\"Digital Audio Workstation\" --set-key=X-GNOME-FullName --set-value=\"Ardour v6 (Digital Audio Workstation)\" --set-comment=\"Record, mix and master audio\" --remove-category=AudioEditing --add-category=X-AudioEditing --set-icon=${FLATPAK_ID} build/gtk2_ardour/ardour6.desktop",
        "install -Dm644 build/gtk2_ardour/ardour6.desktop /app/share/applications/${FLATPAK_ID}.desktop",
        "install -Dm644 build/gtk2_ardour/ardour6.appdata.xml /app/share/appdata/${FLATPAK_ID}.appdata.xml",
        "for s in 16 22 32 48 256 512; do install -Dpm644 /app/share/ardour6/resources/Ardour-icon_${s}px.png /app/share/icons/hicolor/${s}x${s}/apps/${FLATPAK_ID}.png ; done",
        "install -d /app/extensions/Plugins"
      ],
      "sources": [
        {
          "type": "git",
          "url": "git://github.com/Ardour/ardour.git",
          "tag": "6.5",
          "commit": "80e3c191e412be7da5e0d05856e14f2f208b3035"
        },
        {
          "type": "patch",
          "path": "patches/ardour5-5.12.0-appdata-flatpak.patch"
        }
      ]
    }
  ]
}
